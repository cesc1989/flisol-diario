<%= form_with(model: @entry, local: true, data: { turbo: false }) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <p>
        <%= pluralize(@entry.errors.count, "error") %> impidieron guardar el formulario
      </p>

      <ul class="list-disc text-red-500 mb-4">
        <% @entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12 mb-3">
      <%= f.rich_text_area :trix_content, class: 'form-control' %>
    </div>
  </div>

  <div class="">
    <%= f.submit 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>
